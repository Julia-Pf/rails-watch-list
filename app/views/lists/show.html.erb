
<div class="card text-center bg-dark text-white">
<%= cl_image_tag @list.photo.key, height: 300, width: 400, crop: :fill, class: "card-img img-fluid"%>
  <div class="card-img-bottom">
    <h2 class="card-title p-3"><%= @list.name %></h2>
  </div>
</div>


<div class="container">
  <div class="row justify-content-center ">
    <% @list.bookmarks.each do |bookmark| %>
    <div class="card m-3" style="width: 25rem;">
      <img class="card-img-top" <%= cl_image_tag @list.photo.key, height: 300, width: 400, crop: :fill %>>

        <div class="card-body">
          <h3 class="card-title"><%= bookmark.movie.title %></h3>
        <p class="card-text"><%= bookmark.comment %></p>
      </div>
    </div>
    <% end %>
  </div>
  <button type="button" class="btn btn-secondary"><%= link_to "Create new Bookmark", new_list_bookmark_path(@list) %></button>
  <button type="button" class="btn btn-light"><%= link_to "Back to lists", lists_path %></button>

</div>
