<div class="container">
  <div class="row justify-content-center ">
    <% @lists.each do |list|%>
      <div class="card m-3" style="width: 25rem;">
        <img class="card-img-top" src="https://images.unsplash.com/photo-1682686578842-00ba49b0a71a?q=80&w=1975&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDF8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="Card image cap">
          <div class="card-body">
           <h3 class="card-title"><%=list.name %></h3>
        <p class="card-text"><%= link_to "view list", list_path(list) %></p>
      </div>
    </div>
    <% end %>
  </div>
    <button type="button" class="btn btn-secondary"><%= link_to "Create new list", new_list_path(@list) %></button>

</div>
